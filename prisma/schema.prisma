// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String?
  email    String  @unique
  password String
}

model Books {
  id         Int    @id @default(autoincrement())
  title      String
  writer     String
  coverImage String
  point      Float
  tag        tags
}

enum tags {
  fiction
  nonFiction
  science
  essay
}
